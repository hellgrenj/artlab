{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Skaffold Debug",
            "type": "coreclr",
            "request": "attach",
            "processId": 1,
            "justMyCode": false, // <--- default är true men fick sätta till false för att få source map nedan att fungera (efter intro av db-mig init container?)
            "pipeTransport": {
                "pipeProgram": "kubectl",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "api-84c57d4986-h4vsj",  // <-------- change the name to the pod you debug. (get names with kubectl get pods)
                    "--"
                ],
                "pipeCwd": "${workspaceFolder}",
                "debuggerPath": "/dbg/netcore/vsdbg",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}" 
            }
        }
    ]
}